{
  "name": "mermaid-pan-zoom",
  "displayName": "mermaid-pan-zoom",
  "description": "Add pan and zoom support to Mermaid diagrams in Markdown preview.",
  "version": "0.0.2",
  "license": "MIT",
  "publisher": "TOnodera",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/TOnodera/mermaid-pan-zoom.git"
  },
  "bugs": {
    "url": "https://github.com/TOnodera/mermaid-pan-zoom/issues"
  },
  "homepage": "https://github.com/TOnodera/mermaid-pan-zoom#readme",
  "keywords": [
    "markdown",
    "mermaid",
    "preview",
    "pan",
    "zoom",
    "diagram"
  ],
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mermaidPanZoom.open",
        "title": "mermaid pan zoom プレビューを開く"
      }
    ],
    "languages": [
      {
        "id": "markdown",
        "extensions": [
          ".md",
          ".markdown"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "fmt": "prettier --write \"{src,webview-ui}/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "inversify": "^7.6.1",
    "reflect-metadata": "^0.2.2"
  }
}
